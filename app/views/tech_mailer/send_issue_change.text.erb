<%= l(:email_body_greeting)%>

<%= l(:email_body_issue_change_header, id: @issue.id, subject: @issue.subject)%>.

<% if @issue.start_date? && (@issue.disabled_core_fields & %w(start_date)).empty? %>
  <%= l(:email_body_issue_new_start_date)%>: <%= format_date(@issue.start_date) %>
<% end %>
<% if @issue.due_date? && (@issue.disabled_core_fields & %w(due_date)).empty? %>
  <%= l(:email_body_issue_new_due_date)%>: <%= format_date(@issue.due_date) %>
<% end %>
