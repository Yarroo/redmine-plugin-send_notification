<p><%= l(:email_body_greeting)%></p>

<p><%= l(:email_body_issue_change_header, id: @issue.id, subject: @issue.subject)%>.</p>

<% if @issue.start_date? && (@issue.disabled_core_fields & %w(start_date)).empty? %>
    <p><%= l(:email_body_issue_new_start_date)%>: <b><%= format_date(@issue.start_date) %></b></p>
<% end %>
<% if @issue.due_date? && (@issue.disabled_core_fields & %w(due_date)).empty? %>
    <p><%= l(:email_body_issue_new_due_date)%>: <b><%= format_date(@issue.due_date) %></b></p>
<% end %>
